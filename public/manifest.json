{
  "name": "Flexisched++",
  "description": "An improved version of Flexisched!",
  "manifest_version": 3,
  "version": "1.2.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blockcookieset",
        "enabled": true,
        "path": "rules/cookieset.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequestWithHostAccess"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["http://*.flexisched.net/*", "https://*.flexisched.net/*"]
}
